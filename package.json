{
  "name": "electron-soundboard",
  "productName": "Professional Soundboard",
  "version": "1.0.0",
  "main": "main.js",
  "icon": "./images/soundboard.ico",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "builder":{
    "appId": "com.erm.professionalsoundboard",
    "files": [
      "dist/**/*",
      "./images/soundboard.ico"
    ],
    "extraResources":[
      {
        "filter": ["./config.json"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./images/soundboard.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./images/soundboard.ico",
      "uninstallerIcon": "./images/soundboard.ico",
      "allowElevation": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8",
    "electron-package": "^0.1.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "howler": "^2.2.4"
  }
}
